<form action="/hoonta/edit/<%= @hoonta.id %>" method="post">
  <input type="text" id="edit-input" name="new_name">
</form>

<h4 id="edit-target" class="sub-headline">
  <%= @hoonta.hoonta_name %>
  <% if @hoonta.user_id == session[:current_user] %>
    <div class="edit-right"><i id="edit-icon" class="material-icons">mode_edit</i></div>
  <% end %>
</h4>

<%= handle_message %>

<div class="row">
  <div class="one column u-full-width">
    <h5></h5>
  </div>
  <div class="seven columns u-full-width">
    <h5>topic</h5>
  </div>
  <div class="three columns u-full-width">
    <h5>deadline</h5>
  </div>
</div>

<% if not @topics.empty? %>

  <% @topics.each do |topic| %>
    <div class="row">
      <% if session[:current_user] == topic.user_id %>
      <form action="/topic/delete_topic/<%= topic.id %>" method="post" class="thin">
        <button type="submit" class="one column trash">
          <i class="material-icons">delete</i>
        </button>
      </form>
      <% else %>
        <div class="one column trash u-full-width">
        </div>
      <% end %>

      <a href="/topic/<%= topic.id %>" method="get">

        <button class="topic-row">

          <div class="two columns u-full-width u-pull-left">
            <%= topic.topic_name %>
          </div>

          <div class="three columns u-full-width u-pull-right">
            <%= topic.deadline %>
          </div>

        </button>
      </a>

    </div>

  <% end %>
<% end %>

<div class="roomy row">
  <a href="/topic/create/<%= @hoonta.id %>"><button>Create a topic</button></a>
</div>


<h5>Members</h5>
<div class="roomy row">
  <% @rosters.each do |roster| %>
    <div class="two columns user-box roomy">
      <%= User.find(roster.user_id).user_name %>
    </div>
  <% end %>
</div>
<div class="roomy row">
  <a href="/hoonta/leave/<%= @hoonta.id %>"><button>Abandon Hoonta</button></a>
</div>
