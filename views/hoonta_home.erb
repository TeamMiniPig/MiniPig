<h4 class="sub-headline"><%=@hoonta.hoonta_name%></h4>

<%= handle_message %>

<div class="row">
  <div class="eight columns u-full-width">
    <h5>topic</h5>
  </div>
  <div class="four columns u-full-width">
    <h5>deadline</h5>
  </div>
</div>

<% if not @topics.empty? %>
  <% @topics.each do |topic| %>

    <div class="row">

      <a href="/topic/<%= topic.id %>" method="get">
        <div class="twelve columns topic-row">

          <div class="eight columns u-full-width">
            <%= topic.topic_name %>
          </div>

          <div class="four columns u-full-width">
            <%= topic.deadline %>
          </div>

        </div>
      </a>

    </div>

  <% end %>
<% end %>

<div class="roomy row">
  <a href="/topic/create/<%= @hoonta.id %>">Create a topic</a>
</div>
<div class="roomy row">
  <a href="/hoonta/leave/<%= @hoonta.id %>">Abandon Hoonta</a>
</div>

<h5>Members</h5>
<div class="row">
  <% @rosters.each do |roster| %>
    <div class="two columns user-box roomy">
      <%= User.find(roster.user_id).user_name %>
    </div>
  <% end %>
</div>
